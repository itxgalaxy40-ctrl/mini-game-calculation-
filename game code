import random
num1 = random.randint(0, 9)
num2 = random.randint(0, 9)
operation = random.choice(['+', '-', '*', '/'])
if operation == '+':
    answer = num1 + num2
elif operation == '-':
    answer = num1 - num2
elif operation == '*':
    answer = num1 * num2
elif operation == '/':
    if num2 == 0:
        num2 = 1  # Avoid division by zero
    answer = num1 // num2
print(f"bro solve this: {num1} {operation} {num2} = ?")
user_answer = int(input("enter your answer:"))
if user_answer == answer:
    print("Correct!")
else:
    print(f"Wrong! The correct answer is {answer}.")# A simple math quiz game that generates two random numbers and a random operation
# enjoy bro
